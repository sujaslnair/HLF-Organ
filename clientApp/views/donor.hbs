<h1>Donor Dashboard</h1>

<div class="form-modal">

    <div id="man-form">
        <h3>Add donor</h3>
        <form id="donorform">
            <table>
                        <tr>
                            <td><input id="donorId" type="text" placeholder="Enter aadhar"/></td>
                            <td><input id="donorName" type="text" placeholder="Name"/></td>
                        </tr>
                        <tr>
                            <td><input id="organType" type="text" placeholder="Organ Type"/></td>
                            <td><input id="donorGrp" type="text" placeholder="Blood group"/></td>
                        
                        </tr>
                        <tr>

                            <td><input id="donorPh" type="number" placeholder="Phone number"/></td>
                            <td><input id="donorAdd" type="text" placeholder="Address"/></td>
                        </tr>
            </table>
            <button type="button" onclick="DonorWriteData(event)" class="btn login">Add Donor</button>
             {{!-- <button type="button" onclick="DonorQueryData(event)" class="btn login">Update Donor</button> --}}
            
        </form>

    </div>
    <div id="man-form">
        <h3>update donor</h3>
        <form id="donorform">
            <table>
                        <tr>
                            <td><input id="QDonorId" type="text" placeholder="Enter aadhar"/></td>
                            <td><input id="QdonorName" type="text" /></td>
                        </tr>
                        <tr>
                            <td><input id="QorganType" type="text" /></td>
                            <td><input id="QdonorGrp" type="text" /></td>
                        
                        </tr>
                        <tr>

                            <td><input id="QdonorPh" type="number" /></td>
                            <td><input id="QdonorAdd" type="text" /></td>
                        </tr>
            </table>
            {{!-- <button type="button" onclick="DonorWriteData(event)" class="btn login">Add Donor</button> --}}
             <button type="button" value="Fetch" id="updatebtn" onclick="DonorUpdateData(event)" class="btn login">Fetch</button>
            
        </form>

    </div>

    <div class="form-modal">

    <div id="man-form">
        <h3>Query Donor</h3>
        <form id="manform" method="POST">
            <table>
                    
            <input id="QueryDonorId" type="text" placeholder="Enter donor aadhar"/>
                       
            </table>
            <button type="button" onclick="DonorQueryData(event)" class="btn login">Query Donor</button>
